{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Parse RocketTile VCD",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "args": [
                "--vcd",
                "${workspaceFolder}/RocketTile_Small/cex.vcd",
                "--inputs",
                "${workspaceFolder}/RocketTile_Small/input.list",
                "--output",
                "${workspaceFolder}/RocketTile_Small/output_pono.csv",
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: debug Rocket compare",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",  // 远程机器的 IP 地址
                "port": 4000              // ptvsd 监听的端口
            },
            "justMyCode": false,
            "preLaunchTask": "run-Rocket-compare",
        },
        {
            "name": "Python: debug Rocket no compare",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",  // 远程机器的 IP 地址
                "port": 4000              // ptvsd 监听的端口
            },
            "justMyCode": false,
            "preLaunchTask": "run-Rocket-no-compare",
        },
    ]
}